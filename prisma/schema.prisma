// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  USER
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum PropertyType {
  APARTMENT
  HOUSE
  STUDIO
  ROOM
  PARKING
  OFFICE
  SHOP        // Commerce
  LAND        // Terrain
  WAREHOUSE   // Entrep√¥t
  GARAGE      // Garage
}

enum LeaseStatus {
  PENDING     // En attente de signature
  ACTIVE      // En cours
  ENDED       // Termin√©e
  CANCELLED   // Annul√©e
}

enum ApplicationStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum ReviewStatus {
  PENDING     // En attente de l'autre avis
  REVEALED    // Les deux avis visibles
  EXPIRED     // D√©lai d√©pass√©, r√©v√©l√© automatiquement
}

enum DocumentType {
  // Existants
  ID_CARD           // Carte identit√©
  PAYSLIP           // Fiche de paie
  CONTRACT          // Contrat de location
  INVENTORY         // √âtat des lieux
  RECEIPT           // Quittance
  PROOF_ADDRESS     // Justificatif domicile
  TAX_NOTICE        // Avis imposition
  INSURANCE         // Attestation assurance
  
  // üÜï √Ä AJOUTER
  WORK_CONTRACT     // Contrat de travail
  BANK_STATEMENT    // RIB / Relev√© bancaire
  GUARANTOR_ID      // Pi√®ce d'identit√© garant
  GUARANTOR_INCOME  // Justificatif revenus garant
  
  OTHER
}

enum NotificationType {
  NEW_MESSAGE
  NEW_APPLICATION
  APPLICATION_ACCEPTED
  APPLICATION_REJECTED
  REVIEW_REQUEST
  REVIEW_RECEIVED
  LEASE_STARTED
  LEASE_ENDING_SOON
  LEASE_ENDED
  DOCUMENTS_VIEWED 
  SYSTEM
}

// ============================================
// MODELS PRINCIPAUX
// ============================================

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  firstName       String
  lastName        String
  password        String
  
 gender          Gender?
 birthDate       DateTime?
 phone           String?
 address         String?
  
  role            UserRole @default(USER)
  isOwner         Boolean  @default(false)
  isTenant        Boolean  @default(false)
  profileComplete Boolean  @default(false)

  // üÜï PROFIL LOCATAIRE - Infos pro
  salary            Int?       // Salaire mensuel net
  profession        String?    // M√©tier
  companyName       String?    // Entreprise
  contractType      String?    // CDI, CDD, etc.
  
  // üÜï PROFIL LOCATAIRE - Adresse actuelle
  currentCity       String?
  currentPostalCode String?
   
  // üÜï GAMIFICATION & XP
  xp              Int      @default(0)
  level           Int      @default(1)
  badges          Json     @default("[]")  // Liste des badges d√©bloqu√©s
  
  // üÜï PR√âF√âRENCES D'AFFICHAGE DU PROFIL PUBLIC
  showBadges      Boolean  @default(true)
  showLevel       Boolean  @default(true)
  showRankBorder  Boolean  @default(true)
  showReviewStats Boolean  @default(true)
  showPhone       Boolean  @default(true)
  showAddress     Boolean  @default(true)

   
  //  Abonnement Stripe
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  subscriptionPlan       String    @default("free") // free, starter, pro, business, enterprise

  // Dans model User, ajoute :
  affiliateClicks AffiliateClick[]
  
  
  // Relations propri√©t√©s
  ownedProperties   Property[] @relation("OwnedProperties")
  rentedProperties  Property[] @relation("RentedProperties")
  
  // Relations locations
  tenantLeases      Lease[]    @relation("TenantLeases")
  
  // Relations candidatures
  applications      Application[] @relation("TenantApplications")
  
  // Relations avis
  reviewsAuthored   Review[]   @relation("AuthoredReviews")
  reviewsReceived   Review[]   @relation("ReceivedReviews")
  
  // Relations messages
  conversationsAsUser1 Conversation[] @relation("User1Conversations")
  conversationsAsUser2 Conversation[] @relation("User2Conversations")
  messages             Message[]

    // Emails
  lastMessageEmailSent DateTime?  // Derni√®re fois qu'un email de nouveau message a √©t√© envoy√©
  
  
  // Relations documents
  documents         Document[]
  
  // Relations notifications
  notifications     Notification[]



  shareLinks    ShareLink[] @relation("UserShareLinks")
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([email])
  @@index([role])
  @@map("users")
}

model Property {
  id          String       @id @default(cuid())
  title       String
  address     String    
  city        String    
  postalCode  String   
  type        PropertyType
  surface     Int
  rooms       Int
  bedrooms    Int
  rent        Float
  description String?      @db.Text
  available   Boolean      @default(true)

  images      String[]     @default([])  // ‚Üê AJOUTER cette ligne
  
  ownerId     String
  owner       User         @relation("OwnedProperties", fields: [ownerId], references: [id], onDelete: Cascade)
  
  tenantId    String?
  tenant      User?        @relation("RentedProperties", fields: [tenantId], references: [id], onDelete: SetNull)
  
  // Relations
  leases        Lease[]
  applications  Application[]
  conversations Conversation[]
  documents     Document[]

  

  shareLinks    ShareLink[]
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  @@index([ownerId])
  @@index([type])
  @@index([available])
  @@index([rent])
  @@map("properties")
}

model Lease {
  id            String      @id @default(cuid())
  
  propertyId    String
  property      Property    @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  tenantId      String
  tenant        User        @relation("TenantLeases", fields: [tenantId], references: [id], onDelete: Cascade)
  
  startDate     DateTime
  endDate       DateTime?
  monthlyRent   Float
  deposit       Float?
  charges       Float?
  
  status        LeaseStatus @default(ACTIVE)


   // üÜï Services souscrits par le locataire
  hasInsurance         Boolean   @default(false)
  hasEnergy            Boolean   @default(false)
  hasInternet          Boolean   @default(false)
  insuranceConfirmedAt DateTime?
  energyConfirmedAt    DateTime?
  internetConfirmedAt  DateTime?
  
  // Relations
  reviews       Review[]
  documents     Document[]
  receipts      Receipt[]
  affiliateConversions AffiliateConversion[]


  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@index([propertyId])
  @@index([tenantId])
  @@index([status])
  @@map("leases")
}

model Receipt {
  id          String   @id @default(cuid())
  
  leaseId     String
  lease       Lease    @relation(fields: [leaseId], references: [id], onDelete: Cascade)
  
  // P√©riode
  month       Int      // 1-12
  year        Int      // ex: 2025
  
  // Montants
  rentAmount  Float    // Loyer
  charges     Float?   // Charges
  totalAmount Float    // Total pay√©
  
  // Paiement
  status      PaymentStatus @default(DECLARED)
  declaredAt  DateTime?     // Quand le locataire a d√©clar√©
  paidAt      DateTime?     // Quand le proprio a confirm√©
  paymentMethod String?
  
  // PDF
  pdfUrl      String?
  
  createdAt   DateTime @default(now())
  
  @@unique([leaseId, month, year])
  @@index([leaseId])
  @@index([year, month])
  @@map("receipts")
}

model Application {
  id          String            @id @default(cuid())
  
  propertyId  String
  property    Property          @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  tenantId    String
  tenant      User              @relation("TenantApplications", fields: [tenantId], references: [id], onDelete: Cascade)
  
  message     String?           @db.Text
  status      ApplicationStatus @default(PENDING)
  
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

   
  // üÜï Documents partag√©s
  sharedDocuments SharedDocument[]
  
  @@unique([propertyId, tenantId])
  @@index([propertyId])
  @@index([tenantId])
  @@index([status])
  @@map("applications")
}

model Review {
  id        String   @id @default(cuid())
  leaseId   String
  authorId  String   // Celui qui √©crit l'avis
  targetId  String   // Celui qui re√ßoit l'avis
  
  // Note finale calcul√©e automatiquement
  rating    Float    // Note finale (0-5)
  
  // Crit√®res d√©taill√©s (JSON)
  criteria  Json?    // { cleanliness: 4, communication: 5, ... }
  
  // Sp√©cifique propri√©taires
  depositReturned        Boolean? // true/false/null
  depositReturnedPercent Int?     // 0-100 si partiellement rendu
  
  comment   String?
  
  status     ReviewStatus @default(PENDING)
  submittedAt DateTime    @default(now())
  revealedAt  DateTime?
  
  lease     Lease   @relation(fields: [leaseId], references: [id], onDelete: Cascade)
  author    User    @relation("AuthoredReviews", fields: [authorId], references: [id], onDelete: Cascade)
  target    User    @relation("ReceivedReviews", fields: [targetId], references: [id], onDelete: Cascade)
  
  @@unique([leaseId, authorId])
  @@index([targetId])
}



model Conversation {
  id          String    @id @default(cuid())
  
  user1Id     String
  user1       User      @relation("User1Conversations", fields: [user1Id], references: [id], onDelete: Cascade)
  
  user2Id     String
  user2       User      @relation("User2Conversations", fields: [user2Id], references: [id], onDelete: Cascade)
  
  propertyId  String?
  property    Property? @relation(fields: [propertyId], references: [id], onDelete: SetNull)
  
  messages    Message[]
  
  lastMessageAt DateTime?
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@unique([user1Id, user2Id, propertyId])
  @@index([user1Id])
  @@index([user2Id])
  @@index([lastMessageAt])
  @@map("conversations")
}

model Message {
  id              String       @id @default(cuid())
  
  conversationId  String
  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  senderId        String
  sender          User         @relation(fields: [senderId], references: [id], onDelete: Cascade)
  
  content         String       @db.Text
  attachments     Json?
  
  read            Boolean      @default(false)
  readAt          DateTime?
  
  createdAt       DateTime     @default(now())
  
  @@index([conversationId])
  @@index([senderId])
  @@index([createdAt])
  @@map("messages")
}

model Document {
  id          String       @id @default(cuid())
  
  ownerId     String
  owner       User         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  propertyId  String?
  property    Property?    @relation(fields: [propertyId], references: [id], onDelete: SetNull)
  
  leaseId     String?
  lease       Lease?       @relation(fields: [leaseId], references: [id], onDelete: SetNull)
  
  type        DocumentType
  name        String
  url         String
  size        Int?
  mimeType    String?
  
  verified    Boolean      @default(false)
  verifiedAt  DateTime?
  verifiedBy  String?

    // üÜï Partages
  sharedWith SharedDocument[]
  
  uploadedAt  DateTime     @default(now())
    
  createdAt   DateTime     @default(now())  // üÜï AJOUTER CETTE LIGNE
  updatedAt   DateTime     @updatedAt       // üÜï AJOUTER CETTE LIGNE
  
  @@index([ownerId])
  @@index([propertyId])
  @@index([leaseId])
  @@index([type])
  @@map("documents")
}

model Notification {
  id          String           @id @default(cuid())
  
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type        NotificationType
  title       String
  message     String           @db.Text
  link        String?
  
  read        Boolean          @default(false)
  readAt      DateTime?
  
  createdAt   DateTime         @default(now())
  
  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@map("notifications")
}

model AffiliateConversion {
  id          String   @id @default(cuid())
  
  leaseId     String
  lease       Lease    @relation(fields: [leaseId], references: [id], onDelete: Cascade)
  
  category    String   // 'gli', 'habitation', 'energie', etc.
  partner     String   // 'luko', 'selectra', etc.
  
  clickedAt   DateTime?
  convertedAt DateTime?
  
  commission  Float?
  status      String   // 'pending', 'validated', 'paid'
  
  createdAt   DateTime @default(now())
  
  @@index([leaseId])
  @@index([status])
  @@map("affiliate_conversions")
}

model ShareLink {
  id          String    @id @default(cuid())
  shortCode   String    @unique
  type        ShareType
  
  // Si c'est un profil
  userId      String?
  user        User?     @relation("UserShareLinks", fields: [userId], references: [id], onDelete: Cascade)
  
  // Si c'est une propri√©t√©
  propertyId  String?
  property    Property? @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  views       Int       @default(0)
  createdAt   DateTime  @default(now())
  
  @@index([shortCode])
  @@index([userId])
  @@index([propertyId])
  @@map("share_links")
}



enum ShareType {
  PROFILE
  PROPERTY
}

enum PaymentStatus {
  DECLARED    // Locataire a d√©clar√© avoir pay√©
  CONFIRMED   // Propri√©taire a confirm√© la r√©ception
}

// Documents partag√©s lors d'une candidature
model SharedDocument {
  id            String      @id @default(cuid())
  
  // Liaison candidature
  applicationId String
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  
  // Liaison document
  documentId    String
  document      Document    @relation(fields: [documentId], references: [id], onDelete: Cascade)
  
  // Tracking consultation
  viewedAt      DateTime?   // Premi√®re consultation
  viewedCount   Int         @default(0)
  
  createdAt     DateTime    @default(now())
  
  @@unique([applicationId, documentId])
  @@index([applicationId])
  @@index([documentId])
}

// ============================================
// AFFILIATION
// ============================================

enum AffiliateCategory {
  INSURANCE
  ENERGY
  INTERNET
  MOVING
  OTHER
}

model AffiliatePartner {
  id          String            @id @default(cuid())
  
  name        String            // "Luko", "TotalEnergies"
  slug        String            @unique // "luko", "totalenergies"
  logo        String?           // URL logo
  category    AffiliateCategory
  
  headline    String            // "Assurance habitation d√®s 3,50‚Ç¨/mois"
  description String?           @db.Text // Description longue
  features    String[]          // ["Sans engagement", "100% en ligne"]
  
  url         String            // Lien affili√©
  ctaText     String            @default("D√©couvrir") // Texte du bouton
  
  // Affichage
  isActive    Boolean           @default(true)
  isFeatured  Boolean           @default(false) // Mis en avant
  priority    Int               @default(0) // Ordre (plus haut = premier)
  
  // Stats (calcul√©es)
  clickCount  Int               @default(0)
  
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  
  clicks      AffiliateClick[]
  
  @@index([category])
  @@index([isActive])
}

model AffiliateClick {
  id         String   @id @default(cuid())
  
  partnerId  String
  partner    AffiliatePartner @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  // Contexte
  source     String   // DASHBOARD, SERVICES_PAGE, NOTIFICATION, EMAIL
  leaseId    String?  // Bail concern√© (optionnel)
  
  // Tracking
  ipAddress  String?
  userAgent  String?
  
  clickedAt  DateTime @default(now())
  
  @@index([partnerId])
  @@index([userId])
  @@index([clickedAt])
}